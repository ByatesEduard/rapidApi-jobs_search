{
  "compilerOptions": {
    "target": "es2017",                        
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",                        
    "moduleResolution": "node",
    "jsx": "react-jsx",                         
    "strict": true,                             
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                      
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
